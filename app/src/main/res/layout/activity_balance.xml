<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    tools:openDrawer="right"
    android:layout_height="match_parent"
    tools:context=".balance">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                app:title="Fitness App"
                app:titleTextColor="#fff"
                android:background="#FFA500"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BALANCE EXERCISES"
                    android:textColor="#FFA500"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle"
                    android:layout_marginTop="10dp"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv1"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border1"
                    android:text="Sumo Squat With Outer Thigh Pulse"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </RelativeLayout>
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border1"
                android:src="@drawable/b1"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle"
                    android:layout_centerVertical="true"
                    android:text="2"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv2"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border1"
                    android:text="Standing Crunch With Under-the-Leg Clap"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </RelativeLayout>
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border1"
                android:src="@drawable/b2"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="3"
                    android:textColor="#000"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv3"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border1"
                    android:text="Curtsy Lunge With Oblique Crunch"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </RelativeLayout>
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border1"
                android:src="@drawable/b3"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle"
                    android:layout_centerVertical="true"
                    android:text="4"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv4"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border1"
                    android:text="Plank With Flying Plane Arms"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </RelativeLayout>
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border1"
                android:src="@drawable/b4"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="5"
                    android:textColor="#000"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv5"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border1"
                    android:text="Rolling Forearm Side Plank"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </RelativeLayout>
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border1"
                android:src="@drawable/b5"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="6"
                    android:textColor="#000"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv6"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border1"
                    android:text="Arm Sequence With Lifted Heels"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </RelativeLayout>
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border1"
                android:src="@drawable/b6"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="7"
                    android:textColor="#000"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv7"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border1"
                    android:text="T-Stand With Hinge and Side Bend"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </RelativeLayout>
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border1"
                android:src="@drawable/b7"
                />

        </LinearLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navmenu"
        app:menu="@menu/iconmenu"
        app:headerLayout="@layout/navheader"
        android:layout_gravity="start"/>


</androidx.drawerlayout.widget.DrawerLayout>