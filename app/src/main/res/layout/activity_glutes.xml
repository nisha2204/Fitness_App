<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".glutes">
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/circle"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv1"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border1"
                android:text="SQUATS"
                android:textColor="#000"
                android:textSize="20dp" />
        </RelativeLayout>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="200dp"
            android:background="@drawable/border1"
            android:src="@drawable/gif1"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle"
                android:layout_centerVertical="true"
                android:text="2"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv2"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border1"
                android:text="BARBELL HIP THRUST"
                android:textColor="#000"
                android:textSize="20dp" />
        </RelativeLayout>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="200dp"
            android:background="@drawable/border1"
            android:src="@drawable/gif2"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="3"
                android:textColor="#000"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv3"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border1"
                android:text="HIP THRUST"
                android:textColor="#000"
                android:textSize="20dp" />
        </RelativeLayout>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="200dp"
            android:background="@drawable/border1"
            android:src="@drawable/gif3"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/circle"
                android:layout_marginTop="10dp"
                android:text="4"
                android:textColor="#000"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv4"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border1"
                android:text="GLUTE BRIDGE"
                android:textColor="#000"
                android:textSize="20dp" />
        </RelativeLayout>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="200dp"
            android:background="@drawable/border1"
            android:src="@drawable/gif4"
            />

    </LinearLayout>

</ScrollView>

</LinearLayout>