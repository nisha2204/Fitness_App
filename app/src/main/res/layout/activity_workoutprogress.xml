<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".workoutprogress">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Your Daily Activity"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#FFA500"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="10dp"

        />
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:hint="No. of pushups"
        android:background="@drawable/border1"
        android:id="@+id/pushup" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
        android:layout_margin="5dp"
            android:textSize="18sp"
            android:hint="no.of pullups"
            android:background="@drawable/border1"
            android:id="@+id/pullup" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
        android:layout_margin="5dp"
            android:paddingBottom="5dp"
            android:textSize="18sp"
            android:hint="no.of squats"
            android:background="@drawable/border1"
            android:id="@+id/squat" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
        android:layout_margin="5dp"
            android:textSize="18sp"
            android:background="@drawable/border1"
            android:hint="Time of plunk in minutes"
            android:id="@+id/plunk" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
        android:layout_margin="5dp"
            android:textSize="18sp"
            android:hint="No.of situps"
            android:background="@drawable/border1"
            android:id="@+id/situp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:text="save"
            android:textSize="18sp"
            android:id="@+id/Save" />


</LinearLayout>